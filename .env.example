# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview  # or azure model deployment name
OPENAI_API_BASE=https://api.openai.com/v1  # or your Azure endpoint

# Kubernetes Configuration
KUBERNETES_CONTEXT=your-context-name
KUBERNETES_NAMESPACE=default
MONITORING_INTERVAL=300  # seconds

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/chromadb
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Notification Configuration
NOTIFICATION_CHANNELS=slack,teams,email
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log 